// ResolveIt v2 Prisma Schema
// Based on UI features and Zoea-2 patterns
// All IDs use UUID, Tags renamed to Categories

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  super_admin
  admin
  agent
  customer
}

enum TicketStatus {
  New
  Assigned
  In_Progress
  On_Hold
  Resolved
  Closed
  Reopened
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

model User {
  id              String    @id @default(uuid()) @db.Uuid
  email           String    @unique
  password_hash   String    @map("password_hash")
  first_name      String    @map("first_name")
  last_name       String    @map("last_name")
  role            UserRole
  is_active       Boolean   @default(true) @map("is_active")
  organization_id String?   @map("organization_id") @db.Uuid
  created_at      DateTime  @default(now()) @map("created_at")
  updated_at      DateTime  @updatedAt @map("updated_at")
  created_by_id   String?   @map("created_by_id") @db.Uuid
  updated_by_id   String?   @map("updated_by_id") @db.Uuid
  last_login_at   DateTime? @map("last_login_at")
  last_login_ip   String?   @map("last_login_ip") @db.Inet

  // Relations
  organization          Organization?    @relation(fields: [organization_id], references: [id], onDelete: SetNull)
  created_by            User?            @relation("UserCreatedBy", fields: [created_by_id], references: [id], onDelete: SetNull)
  updated_by            User?            @relation("UserUpdatedBy", fields: [updated_by_id], references: [id], onDelete: SetNull)
  users_created         User[]           @relation("UserCreatedBy")
  users_updated         User[]           @relation("UserUpdatedBy")
  tickets_created       Ticket[]         @relation("TicketCreatedBy")
  tickets_assigned      Ticket[]         @relation("TicketAssignedTo")
  tickets_updated       Ticket[]         @relation("TicketUpdatedBy")
  comments              Comment[]        @relation("CommentAuthor")
  comments_updated      Comment[]        @relation("CommentUpdatedBy")
  ticket_events         TicketEvent[]
  attachments           Attachment[]
  attachments_deleted   Attachment[]     @relation("AttachmentDeletedBy")
  organizations_created Organization[]   @relation("OrganizationCreatedBy")
  organizations_updated Organization[]   @relation("OrganizationUpdatedBy")
  categories_created    Category[]       @relation("CategoryCreatedBy")
  categories_updated    Category[]       @relation("CategoryUpdatedBy")
  priorities_created    TicketPriority[] @relation("PriorityCreatedBy")
  priorities_updated    TicketPriority[] @relation("PriorityUpdatedBy")
  invites_created       Invite[]         @relation("InviteCreatedBy")
  invites_updated       Invite[]         @relation("InviteUpdatedBy")
  sessions              UserSession[]
  login_attempts        LoginAttempt[]

  @@index([email])
  @@index([role])
  @@index([organization_id])
  @@index([is_active])
  @@index([created_at])
  @@index([last_login_at])
  @@map("users")
}

model Organization {
  id            String   @id @default(uuid()) @db.Uuid
  name          String
  domain        String?
  email         String?
  phone         String?
  address       String?
  is_active     Boolean  @default(true) @map("is_active")
  created_at    DateTime @default(now()) @map("created_at")
  updated_at    DateTime @updatedAt @map("updated_at")
  created_by_id String?  @map("created_by_id") @db.Uuid
  updated_by_id String?  @map("updated_by_id") @db.Uuid

  // Relations
  users      User[]
  created_by User?  @relation("OrganizationCreatedBy", fields: [created_by_id], references: [id], onDelete: SetNull)
  updated_by User?  @relation("OrganizationUpdatedBy", fields: [updated_by_id], references: [id], onDelete: SetNull)

  @@index([name])
  @@index([is_active])
  @@index([created_at])
  @@map("organizations")
}

model Ticket {
  id              String       @id @default(uuid()) @db.Uuid
  ticket_code     String       @unique @map("ticket_code")
  subject         String
  description     String
  requester_email String?      @map("requester_email")
  requester_name  String?      @map("requester_name")
  requester_phone String       @map("requester_phone")
  location        String?
  status          TicketStatus @default(New)
  created_at      DateTime     @default(now()) @map("created_at")
  updated_at      DateTime     @updatedAt @map("updated_at")
  resolved_at     DateTime?    @map("resolved_at")
  closed_at       DateTime?    @map("closed_at")

  // Foreign keys
  created_by_id String  @map("created_by_id") @db.Uuid
  updated_by_id String? @map("updated_by_id") @db.Uuid
  assignee_id   String? @map("assignee_id") @db.Uuid
  priority_id   String  @map("priority_id") @db.Uuid

  // Relations
  created_by    User             @relation("TicketCreatedBy", fields: [created_by_id], references: [id], onDelete: Cascade)
  updated_by    User?            @relation("TicketUpdatedBy", fields: [updated_by_id], references: [id], onDelete: SetNull)
  assignee      User?            @relation("TicketAssignedTo", fields: [assignee_id], references: [id], onDelete: SetNull)
  priority      TicketPriority   @relation(fields: [priority_id], references: [id], onDelete: Restrict)
  comments      Comment[]
  ticket_events TicketEvent[]
  attachments   Attachment[]
  categories    TicketCategory[]

  @@index([status])
  @@index([priority_id])
  @@index([assignee_id])
  @@index([created_by_id])
  @@index([created_at])
  @@index([updated_at])
  @@map("tickets")
}

model Comment {
  id          String   @id @default(uuid()) @db.Uuid
  content     String
  is_internal Boolean  @default(false) @map("is_internal")
  created_at  DateTime @default(now()) @map("created_at")
  updated_at  DateTime @updatedAt @map("updated_at")

  // Foreign keys
  ticket_id     String  @map("ticket_id") @db.Uuid
  author_id     String  @map("author_id") @db.Uuid
  updated_by_id String? @map("updated_by_id") @db.Uuid

  // Relations
  ticket     Ticket @relation(fields: [ticket_id], references: [id], onDelete: Cascade)
  author     User   @relation("CommentAuthor", fields: [author_id], references: [id], onDelete: Cascade)
  updated_by User?  @relation("CommentUpdatedBy", fields: [updated_by_id], references: [id], onDelete: SetNull)

  @@index([ticket_id])
  @@index([author_id])
  @@index([created_at])
  @@map("comments")
}

model TicketEvent {
  id          String   @id @default(uuid()) @db.Uuid
  change_type String   @map("change_type")
  old_value   String?  @map("old_value")
  new_value   String?  @map("new_value")
  ip_address  String?  @map("ip_address") @db.Inet
  created_at  DateTime @default(now()) @map("created_at")

  // Foreign keys
  ticket_id String @map("ticket_id") @db.Uuid
  user_id   String @map("user_id") @db.Uuid

  // Relations
  ticket Ticket @relation(fields: [ticket_id], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([ticket_id])
  @@index([user_id])
  @@index([created_at])
  @@map("ticket_events")
}

model UserSession {
  id             String    @id @default(uuid()) @db.Uuid
  user_id        String    @map("user_id") @db.Uuid
  device_id      String?   @map("device_id")
  device_name    String?   @map("device_name")
  device_type    String?   @map("device_type")
  os_version     String?   @map("os_version")
  app_version    String?   @map("app_version")
  fcm_token      String?   @map("fcm_token")
  ip_address     String?   @map("ip_address") @db.Inet
  user_agent     String?   @map("user_agent")
  is_active      Boolean   @default(true) @map("is_active")
  last_active_at DateTime  @default(now()) @map("last_active_at")
  created_at     DateTime  @default(now()) @map("created_at")
  expires_at     DateTime? @map("expires_at")

  // Relations
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([is_active])
  @@index([created_at])
  @@index([expires_at])
  @@map("user_sessions")
}

model LoginAttempt {
  id             String   @id @default(uuid()) @db.Uuid
  email          String
  ip_address     String?  @map("ip_address") @db.Inet
  user_agent     String?  @map("user_agent")
  success        Boolean  @default(false)
  failure_reason String?  @map("failure_reason")
  user_id        String?  @map("user_id") @db.Uuid
  created_at     DateTime @default(now()) @map("created_at")

  // Relations
  user User? @relation(fields: [user_id], references: [id], onDelete: SetNull)

  @@index([email])
  @@index([ip_address])
  @@index([success])
  @@index([created_at])
  @@index([user_id])
  @@map("login_attempts")
}

model Attachment {
  id                String    @id @default(uuid()) @db.Uuid
  original_filename String    @map("original_filename")
  stored_filename   String    @map("stored_filename")
  mime_type         String    @map("mime_type")
  size              BigInt
  is_deleted        Boolean   @default(false) @map("is_deleted")
  uploaded_at       DateTime  @default(now()) @map("uploaded_at")
  deleted_at        DateTime? @map("deleted_at")

  // Foreign keys
  ticket_id      String  @map("ticket_id") @db.Uuid
  uploaded_by_id String  @map("uploaded_by_id") @db.Uuid
  deleted_by_id  String? @map("deleted_by_id") @db.Uuid

  // Relations
  ticket      Ticket @relation(fields: [ticket_id], references: [id], onDelete: Cascade)
  uploaded_by User   @relation(fields: [uploaded_by_id], references: [id], onDelete: Cascade)
  deleted_by  User?  @relation("AttachmentDeletedBy", fields: [deleted_by_id], references: [id], onDelete: SetNull)

  @@index([ticket_id])
  @@index([uploaded_by_id])
  @@index([is_deleted])
  @@index([uploaded_at])
  @@map("attachments")
}

model TicketPriority {
  id            String   @id @default(uuid()) @db.Uuid
  name          String   @unique
  is_active     Boolean  @default(true) @map("is_active")
  sort_order    Int      @default(0) @map("sort_order")
  created_at    DateTime @default(now()) @map("created_at")
  updated_at    DateTime @updatedAt @map("updated_at")
  created_by_id String?  @map("created_by_id") @db.Uuid
  updated_by_id String?  @map("updated_by_id") @db.Uuid

  // Relations
  tickets    Ticket[]
  created_by User?    @relation("PriorityCreatedBy", fields: [created_by_id], references: [id], onDelete: SetNull)
  updated_by User?    @relation("PriorityUpdatedBy", fields: [updated_by_id], references: [id], onDelete: SetNull)

  @@index([is_active])
  @@index([sort_order])
  @@map("ticket_priority")
}

model Category {
  id            String   @id @default(uuid()) @db.Uuid
  name          String   @unique
  is_active     Boolean  @default(true) @map("is_active")
  created_at    DateTime @default(now()) @map("created_at")
  updated_at    DateTime @updatedAt @map("updated_at")
  created_by_id String?  @map("created_by_id") @db.Uuid
  updated_by_id String?  @map("updated_by_id") @db.Uuid

  // Relations
  tickets    TicketCategory[]
  created_by User?            @relation("CategoryCreatedBy", fields: [created_by_id], references: [id], onDelete: SetNull)
  updated_by User?            @relation("CategoryUpdatedBy", fields: [updated_by_id], references: [id], onDelete: SetNull)

  @@index([is_active])
  @@index([name])
  @@map("categories")
}

model TicketCategory {
  id         String   @id @default(uuid()) @db.Uuid
  created_at DateTime @default(now()) @map("created_at")

  // Foreign keys
  ticket_id   String @map("ticket_id") @db.Uuid
  category_id String @map("category_id") @db.Uuid

  // Relations
  ticket   Ticket   @relation(fields: [ticket_id], references: [id], onDelete: Cascade)
  category Category @relation(fields: [category_id], references: [id], onDelete: Cascade)

  @@unique([ticket_id, category_id])
  @@index([ticket_id])
  @@index([category_id])
  @@map("ticket_categories")
}

model Invite {
  id            String       @id @default(uuid()) @db.Uuid
  email         String
  role          UserRole
  token         String       @unique
  expires_at    DateTime     @map("expires_at")
  status        InviteStatus @default(PENDING)
  created_at    DateTime     @default(now()) @map("created_at")
  updated_at    DateTime     @updatedAt @map("updated_at")
  accepted_at   DateTime?    @map("accepted_at")
  created_by_id String?      @map("created_by_id") @db.Uuid
  updated_by_id String?      @map("updated_by_id") @db.Uuid

  // Relations
  created_by User? @relation("InviteCreatedBy", fields: [created_by_id], references: [id], onDelete: SetNull)
  updated_by User? @relation("InviteUpdatedBy", fields: [updated_by_id], references: [id], onDelete: SetNull)

  @@index([email])
  @@index([token])
  @@index([status])
  @@index([created_at])
  @@map("invites")
}
